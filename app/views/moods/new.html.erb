<%= form_for @mood do |f| %>
	<%= f.label 'I\'m feeling:' %>
	<%= f.text_field :name %>
	
	<%= f.label 'when I feel this way I\'m in the mood for:' %>
	<%= f.select options_for_select %>

	<%= f.label 'add an image:' %>
	<%= f.text_field :image %>
	
	<%= f.submit "Show me some movies!" %>

<% end %>