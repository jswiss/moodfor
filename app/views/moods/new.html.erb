<%= form_for @mood do |f| %>
	<%= f.label 'I\'m feeling:' %>
	<%= f.text_field :name %>
	
	<%= f.label 'add an image:' %>
	<%= f.text_field :image %>
	
	<%=fields_for @genre do |fa| %>
		<%= fa.label 'when I feel this way I\'m in the mood for:' %>
		<%= fa.collection_select(:genre_id, 0, Genre.all, :id, :name)  %>
	<% end %>	

	<%= f.submit "Show me some movies!" %>

<% end %>